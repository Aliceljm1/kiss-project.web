/* 
 *	Generic styles for all buttons
 */
.btn {
	display: inline-block;
	margin: 0;
	padding: 0;
	font: bold 13px "Helvetica Neue", Helvetica, Arial, clean, sans-serif !important;
	text-decoration: none !important;
	/*text-shadow: 1px 1px 2px rgba(0,0,0,0.20);*/
	background: none;
	border: none;
	white-space: nowrap;
	cursor: pointer;
	user-select: none;
	-moz-user-select: none;
	
	/* Fix extra width padding in IE */
	_width: 0;
	overflow: visible;
}

.btn span {
	display: block;						/* Prevents :active from working in IE--oh well! */
	height: 24px;
	padding-right: 12px;
	background-repeat: no-repeat;
	background-position: right top;
}

.btn span span {
	padding-right: 0;
	padding-left: 12px;
	line-height: 24px;
	background-position: left top;
}

.btn span span span {
	padding-left: 21px;
	background-image: none;
	background-repeat: no-repeat;
	background-position: left center;
	/* IE6 still requires a PNG transparency fix */ 
	/* _background-image: none;		Or just hide icons from the undeserving IE6 */
	/* _padding-left: 0;					Or just hide icons from the undeserving IE6 */
}

.btn span span span.after {
	padding-left: 0px;
	padding-right: 21px;
	background-position: right center;
	/* IE6 still requires a PNG transparency fix */ 
	/* _padding-right: 0;					Or just hide icons from the undeserving IE6 */
}

.btn[disabled],
.btn[disabled]:hover,
.btn[disabled]:focus,
.btn[disabled]:active,
.btn.disabled,
.btn.disabled:hover,
.btn.disabled:focus,
.btn.disabled:active {
	color: #333 !important;
	cursor: inherit;
	text-shadow: none; 
	opacity: 0.33;
}

.btn:hover span,
.btn:focus span {
	background-position: 100% -24px;
}

.btn:hover span span,
.btn:focus span span {
	background-position: 0% -24px;
}

.btn:active span {
	background-position: 100% -48px;
}

.btn:active span span {
	background-position: 0% -48px;
}

.btn[disabled] span,
.btn.disabled span {
	background-position: 100% -72px;
}

.btn[disabled] span span,
.btn.disabled span span {
	background-position: 0% -72px;
}

.btn:hover span span span,
.btn:focus span span span,
.btn:active span span span,
.btn[disabled] span span span,
.btn.disabled span span span {
	background-position: left center;
}

.btn:hover span span span.after,
.btn:focus span span span.after,
.btn:active span span span.after,
.btn[disabled] span span span.after,
.btn.disabled span span span.after {
	background-position: right center;
}

.btn img {
	margin-right: 5px;
	vertical-align: text-top;
	/* IE6 Hack */
	_margin-top: 4px;
	_vertical-align: text-bottom;
	/* IE6 still requires a PNG transparency fix */ 
	/* _display: none;		Or just hide icons from the undeserving IE6 */
}

.btn img.after {
	margin-right: 0;
	margin-left: 5px;
	/* IE6 still requires a PNG transparency fix */ 
	/* _margin-left: 0;		Or just hide icons from the undeserving IE6 */
}

.btn.btnmedium	{ font-size: 15px !important; }
.btn.btnlarge	{ font-size: 18px !important; }


/* 
 * Simple Skin Buttons
 */

.btn.btnsimple { 
	position: relative; 
	padding: 5px 10px 5px;
	font: inherit;
	font-size: 13px !important;
	font-style: normal !important; 
	font-weight: bold !important; 
	color: #fff !important;
	line-height: 1; 
	background-image: url(_res.aspx?r=alF1ZXJ5LmJ0bi5wbmc=&t=&z=image/png&su=1);
	background-repeat: repeat-x;
	background-position: 0 0;
	
	/* Special effects */
	/*text-shadow: 0 -1px 1px rgba(0,0,0,0.25), -2px 0 1px rgba(0,0,0,0.25); */
	border-radius: 5px; 
	-moz-border-radius: 5px; 
	-webkit-border-radius: 5px; 
	/*-moz-box-shadow: 0 1px 2px rgba(0,0,0,0.5); 
	-webkit-box-shadow: 0 1px 2px rgba(0,0,0,0.5);*/
	
	/* IE only stuff */
	border-bottom: 1px solid transparent\9;
	_background-image: none;
	
	/* Cross browser inline block hack - http://blog.mozilla.com/webdev/2009/02/20/cross-browser-inline-block/ */
	display: -moz-inline-stack;
	display: inline-block;
	vertical-align: middle;
	*display: inline !important;
	position: relative;
	
	/* Force hasLayout in IE */
	zoom: 1;
	
	/* Disable text selection (Firefox only)*/
	-moz-user-select: none;
}

.btn.btnsimple::selection {
	background: transparent;
}

.btn.btnsimple:hover,
.btn.btnsimple:focus {
	background-position: 0 -50px; 
	color: #fff !important;
}

.btn.btnsimple:active { 
	background-position: 0 -100px; 
	/*-moz-box-shadow: inset 0 1px 2px rgba(0,0,0,0.7); */
	/* Unfortunately, Safari doesn't support inset yet */
	-webkit-box-shadow: none;
	
	/* IE only stuff */
	border-bottom: 0\9;
	border-top: 1px solid #666\9;
}

.btn.btnsimple[disabled], 
.btn.btnsimple.disabled { 
	background-position: 0 -150px; 
